extends layout

block content
  h1= title
  p Welcome to #{title}
  hr
  h3 Add a Post
  form(action="/" method="post")
    p Title
    input(type="text" name="title")
    p Text
    textarea(name="text")
    input(type="submit" value="Submit")
  hr
  each post in posts
    h4= post.title
    span= post.date
    p= post.text
